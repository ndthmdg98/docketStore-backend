{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/template": [
        "libs/template/src"
      ],
      "@app/template/*": [
        "libs/template/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
